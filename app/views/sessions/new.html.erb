<h1>Log in</h1>

<%= form_with(scope: :session, url: login_path, local: true) do |form| %>
  
  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
    <%= link_to "(forgot password)", new_password_reset_path %>
  </div>

  <div class="actions">
    <%= form.submit "Log in" %>
  </div>
<% end %>
